{{ asset_add('styles.css', 'anomaly.field_type.grid::scss/grid.scss') }}

{{ asset_add("scripts.js", "streams::js/table/jquery-sortable.js") }}
{{ asset_add('scripts.js', 'anomaly.field_type.grid::js/input.js') }}

<div {{ html_attributes(field_type.attributes) }}>

    <div class="grid-list">
        {% for form in field_type.forms %}
            {% include "anomaly.field_type.grid::item" with {'form': form} %}
        {% endfor %}
    </div>

    <div class="grid-controls">

        <a href="{{ url('streams/field_type/grid/choose/' ~ field_type.id() ~ '?prefix=' ~ field_type.prefix) }}"
           data-toggle="modal" data-target="#{{ field_type.field_name }}-modal" class="btn btn-sm btn-success">
            {{ trans(field_type.config.add_row ?: 'anomaly.field_type.grid::button.add_row') }}
        </a>

        {% if field_type.config.manage %}
            <a href="{{ url('admin/grids') }}" class="btn btn-sm btn-warning" target="_blank">
                {{ icon('fa fa-wrench') }}
                {{ trans('anomaly.field_type.repeater::button.manage') }}
            </a>
        {% endif %}

    </div>

    <div class="modal remote" id="{{ field_type.field_name }}-modal"
         data-loading="{{ trans('anomaly.field_type.grid::message.loading') }}">
        <div class="modal-dialog">
            <div class="modal-content"></div>
        </div>
    </div>

</div>
